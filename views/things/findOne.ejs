<div class="container">
    <div class="page-header">
        <h1>One Thing</h1>
    </div>
    <ol class="breadcrumb">
        <li><a href="/things">Things</a></li>
        <li class="active"><%= data.name %></li>
    </ol>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form method="PUT" action="/things/update/<%=data.id%>">
                <div class="form-group">
                    <label for="nameInput">Name</label>
                    <input name="name" type="text" class="form-control" id="nameInput" placeholder="name" value="<%=data.name%>">
                </div>
                <div class="form-group">
                    <label>ID</label>
                    <input name="name" type="text" class="form-control" value="<%=data.id%>" disabled>
                </div>
                <div class="form-group">
                    <label>Created At</label>
                    <input name="name" type="text" class="form-control" value="<%=data.createdAt%>" disabled>
                </div>
                <div class="form-group">
                    <label>Updated At</label>
                    <input name="name" type="text" class="form-control" value="<%=data.updatedAt%>" disabled>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
                <a href="/things/destroy/<%=data.id%>" class="btn btn-danger">Delete</a>
            </form>
        </div>
    </div>
</div>